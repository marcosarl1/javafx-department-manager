<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.workshopjavafxjdbc.controller.DepartmentListController">
   <children>
      <Label text="Department Registration">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </Label>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button fx:id="btnNew" mnemonicParsing="false" onAction="#onBtnNewAction" text="New" />
        </items>
      </ToolBar>
      <TableView fx:id="tbDepartment">
        <columns>
          <TableColumn fx:id="tbColId" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="tbColName" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="tblColEdit" prefWidth="75.0" />
            <TableColumn fx:id="tblColRemove" prefWidth="75.0" />
        </columns>
      </TableView>
   </children>
</VBox>
